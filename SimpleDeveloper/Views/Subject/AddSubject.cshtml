@model SimpleDeveloperCore.ViewModels.SubjectViewModel

@{
    ViewData["Title"] = "Add Subject";
}

<h2 class="text-center">Add Subject</h2>

<form asp-action="AddSubject" method="post" class="form-container">
    <div class="form-group">
        <label class="form-label">Name <i class="bi bi-asterisk required-asterisk"></i></label>
        <input asp-for="Name" class="form-control form-input" placeholder="Enter subject name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Class <i class="bi bi-asterisk required-asterisk"></i></label>
        <select asp-for="Class" class="form-control form-input">
            <option value="">Select a Class</option>
            <option value="1">1st</option>
            <option value="2">2nd</option>
            <option value="3">3rd</option>
            <option value="4">4th</option>
            <option value="5">5th</option>
            <option value="6">6th</option>
            <option value="7">7th</option>
            <option value="8">8th</option>
            <option value="9">9th</option>
            <option value="10">10th</option>
            <option value="11">11th</option>
            <option value="12">12th</option>
        </select>
        <span asp-validation-for="Class" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Languages</label>        
        <select class="form-select form-control" id="languages" name="languages[]" data-placeholder="Select languages" multiple>
            <option value="English">English</option>
            <option value="Hindi">Hindi</option>
            <option value="Punjabi">Punjabi</option>
            <option value="German">German</option>
            <option value="Chinese">Chinese</option>
        </select>
    </div>   
    <button type="submit" class="btn btn-primary mt-3">Add Subject</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}