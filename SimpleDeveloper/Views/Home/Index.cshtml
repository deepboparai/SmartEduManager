@model IEnumerable<IGrouping<string, SimpleDeveloperCore.Models.Student>>

@{
    ViewData["Title"] = "Students List";
}

<h2 class="my-4">Students List</h2>

<form asp-action="Index" method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="Search by name" value="@ViewData["CurrentFilter"]" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

@foreach (var group in Model.OrderBy(s =>s.Key))
{
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Class: @group.Key Students</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="thead-light">
                    <tr>
                        <th>Photo</th>
                        <th>Roll Number</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Mobile Number</th>
                        <th>Age</th>                        
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in group)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(student.Photo))
                                {
                                    <img src="@Url.Content($"~/uploads/{student.Photo}")" alt="Image" class="img-thumbnail" width="50" height="50" />
                                }
                                else
                                {
                                    <span><i class="bi bi-person"></i></span>
                                }
                            </td>
                            <td>@student.RollNumber</td>
                            <td>@student.Name</td>
                            <td>@student.Email</td>
                            <td>@student.PhoneNumber</td>
                            <td>@student.Age</td>
                          
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
